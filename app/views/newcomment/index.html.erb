<div class="row">
  <div class="col-lg-12">
    <% @comments.each do |c| %>
      <div class="well" id="comment-<%= c.id %>">
        <span class="star-rating small">
          <% 1.upto(5) do |i| %>
            <% if i == (c.bok+c.chung+c.bun)/3 %>
              <i class="on"></i>
            <% else %>
              <i></i>
            <% end %>
          <% end %>
        </span>
        <br>
        <%=c.created_at.in_time_zone("Seoul").strftime('%F %T에 작성')%>
        <div class="clearfix">
        <p class='pull-left'><<%= "사용한 곳: #{c.building.bname} #{c.floor}층" %>></p>
        <%if c.bidet==1%>
        <p class='text-info pull-left'><비데 사용자></p>
        <% end %>
        </div>
        <p><%=c.comment%></p>
      </div>
    <% end %>

  </div>
</div>